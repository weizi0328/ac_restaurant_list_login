<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>

      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name">
        </div>

        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter email">
        </div>

        <div class="mb-3">
          <label for="password" class="mb-2">Email</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password">
        </div>

        <div class="mb-3">
          <label for="confrimPassword" class="mb-2">Password</label>
          <input type="password" id="confrimPassword" name="confrimPassword" class="form-control"
            placeholder="Enter password again">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>